POSTGRES_USER=zariz
POSTGRES_PASSWORD=zariz
POSTGRES_DB=zariz
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

API_PORT=8000
API_HOST=api
API_JWT_SECRET=replace_me
# Auth tuning
# Access tokens expire (seconds)
API_JWT_EXPIRES=900
# Refresh lifetime (days)
API_REFRESH_DAYS=14
# Argon2 configuration (optional; falls back to bcrypt if argon2 not installed)
ARGON2_ENABLED=1

NGINX_HTTP_PORT=8080

# Web (Next.js) optional
NEXT_PUBLIC_API_BASE=http://localhost:8000/v1

# Backend CORS allowlist (comma-separated)
CORS_ALLOW_ORIGINS=http://localhost:3000

# APNs (optional; worker is no-op if unset)
APNS_KEY_PATH=/run/secrets/apns_key.p8
# Or provide inline key (plain text or base64)
# APNS_KEY_TEXT=
# APNS_KEY_BASE64=
APNS_TEAM_ID=
APNS_KEY_ID=
APNS_TOPIC=com.example.zariz
APNS_USE_SANDBOX=1

# Gorush push gateway (optional)
GORUSH_URL=http://gorush:8088/api/push
# Topic overrides APNS_TOPIC when using gorush
GORUSH_TOPIC=com.example.zariz
GORUSH_SANDBOX=1
GORUSH_TIMEOUT=5
